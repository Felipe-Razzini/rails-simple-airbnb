<nav class="navbar navbar-expand-lg navbar-light ps-3 bg-light">

  <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand text-dark" %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ms-auto flex">
      <form class="d-flex form-inline my-2 my-lg-0">
        <input class="mr-sm-2 me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0 me-2" type="submit">Search</button>
        <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary my-2 my-sm-0 me-3" %>
      </form>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h1>All our Flats</h1>
  <p>All <%= @flats.count %> flats.</p>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-lg-4 mb-4">
      <div class="card">
        <div class="card-body">
          <img class="card-img-top" src="../assets/images/photo.jpeg" alt="Card image cap">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text">
          <i class="fa-solid fa-users-line"></i>
          <%= flat.number_of_guests %>
          </p>
          <p class="card-text">
          <i class="fa-solid fa-euro-sign"></i>
          <%= flat.price_per_night %>
          </p>
          <a href="#" class="btn btn-primary">More info</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
